extends layout

block content
 -data = data || {}

    if errors
        ul 
         for error in errors
          li=error.msg

    form(action="" method="POST" class='form-registration')
                    label(for="name") Name: 
                    input(
                        type="text"
                        name="name"
                        id="name"
                        value=data.name
                        class="form-control"
                    )
                    label(for="email") Email: 
                    input(
                        type="email"
                        name="email"
                        id="email"
                        value=data.email
                        class="form-control"
                    )
                    input(type="submit" value="SUBMIT" class="btn btn-lg btn-primary btn-block")